snippet if_home "if homepage" bm
{% if template.name == "index" %}
    $0
{% endif %}
endsnippet

snippet if_template "if liquid template name"
{% if template.name == "$1" %}
    {%- section '$2' -%}
{%- else -%}
endsnippet

snippet if_last "if forloop.last"
{% if forloop.last == true %}
    $1
{% endif %}
endsnippet

snippet img "image asset boilerplate"
{{ '$1' | asset_url }}
endsnippet
